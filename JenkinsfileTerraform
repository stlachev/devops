properties([parameters([choice(choices: ['plan', 'apply', 'destroy'], name: 'Terraform_Action')])])
pipeline {
    agent any
    options {
        ansiColor('xterm')
    }
    stages {
        stage('Preparing') {
            steps {
                sh 'echo Preparing'
            }
        }
        stage('Git Pulling') {
            steps {
                //withCredentials([gitUsernamePassword(credentialsId: 'git_credential', gitToolName: 'git-tool')]) {
                script {
                    git branch: 'main', 
                        credentialsId: 'git_credential',
                        url: 'https://github.com/stlachev/devops.git'
                    sh 'ls'
                }
            }
        }
        stage('Init') {
            steps {
                withAWS(credentials: '56f0ac9b-0ef7-44a1-81a3-a3cf72459311', region: 'eu-central-1') {
                    script {
                        sh 'cd terraform && terraform init --lock=true'
                    }
                }
            }
        }
        stage('Action') {
            steps {
                echo "Performing: terraform ${params.Terraform_Action}"
                withAWS(credentials: '56f0ac9b-0ef7-44a1-81a3-a3cf72459311', region: 'eu-central-1') {
                    script {
                        sh 'cd terraform && terraform get -update'
                        if (params.Terraform_Action == 'plan') {
                            sh 'cd terraform && terraform plan --lock=true'
                        }   else if (params.Terraform_Action == 'apply') {
                            sh 'cd terraform && terraform apply --lock=true -auto-approve'
                        }   else if (params.Terraform_Action == 'destroy') {
                            sh 'cd terraform && terraform destroy --lock=true -auto-approve'
                        } else {
                            error "Invalid value for Terraform_Action: ${params.Terraform_Action}"
                        }
                    }    
                }
            }
        }
    }
}
